<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical" >

        <ImageView
            android:id="@+id/panTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@android:drawable/bottom_bar" />

        <TextView
            android:id="@+id/txtMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/imgMenuTitle"
            android:text="Tempo para Bloqueio"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/imgMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_time_config2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.94" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="48dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btHrsUp"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/arrow_up_float" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edtHrs"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/spinner_background"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="00"
                        android:textSize="30sp" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btHrsDown"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/arrow_down_float" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btMinUp"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/arrow_up_float" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edtMin"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/spinner_background"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="00"
                        android:textSize="30sp" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btMinDown"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/arrow_down_float" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btSegUp"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/arrow_up_float" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edtSeg"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/spinner_background"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="00"
                        android:textSize="30sp" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btSegDown"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/arrow_down_float" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btTimeOk"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_confirma" />

        <ImageButton
            android:id="@+id/btTimeCancel"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginRight="32dp"
            android:src="@drawable/ic_cancela" />

    </RelativeLayout>

</LinearLayout>